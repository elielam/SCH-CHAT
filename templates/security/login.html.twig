{% extends "base.html.twig" %}

{% block body %}

<div class="container mt-5">

    <div class="row justify-content-center">

        <div class="col-lg-4">

            {% if error %}
                <div class="alert alert-danger" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form action="{{ path('login') }}" method="post">
                <div class="form-group">
                    <label for="exampleInputUsername">Username</label>
                    <input type="text" class="form-control" id="username" name="_username" placeholder="Username" value="{{ last_username }}">
                    <small id="emailHelp" class="form-text text-muted">Get ready to chat with InstaDirect.</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="password" name="_password" placeholder="Password">
                </div>

                <button type="submit" class="btn btn-primary col-lg-6">Login</button>
            </form>


        </div>

    </div>

</div>

{% endblock %}