<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}InstaDirect !{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
        {% endblock %}
    </head>
    <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">INSTA Direct</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-4">
                {% if is_granted('ROLE_USER') %}
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('home') }}"><img width="25px" src="https://image.flaticon.com/icons/svg/263/263115.svg"></a>
                </li>
                {% elseif is_granted('ROLE_ADMIN') %}
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('admin') }}">Back-End <span class="sr-only">(current)</span></a>
                </li>
                {% elseif is_granted('ROLE_USER') == false %}
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('login') }}"><img width="25px" src="https://image.flaticon.com/icons/svg/494/494940.svg"></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('signin') }}"><img class="ml-2" width="25px" src="https://image.flaticon.com/icons/svg/477/477868.svg"></a>
                </li>
                {% endif %}
            </ul>
            <ul class="navbar-nav mr-0 ml-auto">
                {% if is_granted('ROLE_USER') %}
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('profil') }}"><img width="25px" src="https://image.flaticon.com/icons/svg/149/149452.svg"></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link ml-1" href="{{ path('logout') }}"><img width="25px" src="https://image.flaticon.com/icons/svg/149/149409.svg"></a>
                </li>
                {% endif %}
            </ul>
        </div>
    </nav>

        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="{{ asset('build/js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
